<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Simple Audio Player</title>
<style>
  #player-container {
    width: 35px; /* Adjust the size if needed */
    height: 35px; /* Adjust the size if needed */
    background: url('https://github.com/lexteacher/lexteacher.github.io/blob/d7265e8b92b308165b68b386e3f569d1695bdeb7/audio-150191_640.png') no-repeat center center;
    background-size: contain; /* Ensures the image fits within the container */
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
  }

  body {
    margin: 0;
  }
</style>
</head>
<body>
<div id="player-container" onclick="toggleAudio()"></div>

<audio id="audio-element">
  <source src="https://github.com/lexteacher/lexteacher.github.io/blob/0af978aceb6210d4561a56e354bedd58e2b9c1ab/Github%20audio%20test.m4a" type="audio/x-m4a">
</audio>

<script>
  var audioElement = document.getElementById("audio-element");
  var playerContainer = document.getElementById("player-container");

  function toggleAudio() {
    if (audioElement.paused) {
      audioElement.play();
      playerContainer.style.color = "lightgrey"; /* Changing color on play */
    } else {
      audioElement.pause();
      playerContainer.style.color = "gray"; /* Changing color on pause */
    }
  }
</script>
</body>
</html>
